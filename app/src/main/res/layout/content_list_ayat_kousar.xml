<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:text="@string/kausar"
        android:textAlignment="center"

        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:text="@string/bismillah"

        android:textAlignment="center"
        android:textSize="30sp" />

    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bottom_pnl_small_btn_size"

            android:text="@string/kausar1"
            android:textAlignment="center"
            android:textColor="@color/md_amber_800"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageButton
                android:layout_width="36dp"
                android:layout_height="30dp"
                android:contentDescription="TODO"
                android:onClick="onRecording"
                android:src="@drawable/ic_recording_yellow" />


            <ImageButton
                android:id="@+id/btnkausar1n"
                android:layout_width="46dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:contentDescription="TODO"
                android:onClick="firstAyatPlay"
                android:src="@drawable/ic_play" />

            <ImageButton
                android:id="@+id/btnkausar1nKausar"
                android:layout_width="46dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:contentDescription="TODO"
                android:onClick="KausarPlay"
                android:src="@drawable/ic_play"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/btnkausar1nAtina"
                android:layout_width="46dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:contentDescription="TODO"
                android:onClick="AtinaPlay"
                android:src="@drawable/ic_play"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/btnkausar1nInna"
                android:layout_width="46dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:contentDescription="TODO"
                android:onClick="InnaPlay"
                android:src="@drawable/ic_play" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:text="@string/kausar2"

            android:textAlignment="center"
            android:textColor="@color/md_amber_800"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageButton
                android:layout_width="39dp"
                android:layout_height="30dp"
                android:contentDescription="TODO"
                android:onClick="onRecording"
                android:src="@drawable/ic_recording_yellow" />


            <ImageButton
                android:id="@+id/btnkausar2"
                android:layout_width="47dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:contentDescription="TODO"
                android:onClick="secondAyatPlay"
                android:src="@drawable/ic_play" />

            <ImageButton
                android:id="@+id/btnkausar2Wanhar"
                android:layout_width="47dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:contentDescription="TODO"
                android:onClick="secondAyatPlayWanhar"
                android:src="@drawable/ic_play" />

            <ImageButton
                android:id="@+id/btnkausar2Lirabbika"
                android:layout_width="47dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:contentDescription="TODO"
                android:onClick="secondAyatPlayLirabbika"
                android:src="@drawable/ic_play" />

            <ImageButton
                android:id="@+id/btnkausar2Fasalli"
                android:layout_width="47dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:contentDescription="TODO"
                android:onClick="secondAyatPlayFasalli"
                android:src="@drawable/ic_play" />





        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:text="@string/kausar3"

            android:textAlignment="center"
            android:textColor="@color/md_amber_800"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="38dp"
            android:layout_height="30dp"
            android:contentDescription="TODO"
            android:onClick="onRecording"
            android:src="@drawable/ic_recording_yellow" />

        <ImageButton
            android:id="@+id/btnkausar3"
            android:layout_width="47dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:onClick="thirdAyatPlay"
            android:src="@drawable/ic_play" />

        <ImageButton
            android:id="@+id/btnkausar3Abtar"
            android:layout_width="47dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:onClick="thirdAyatPlayAbtar"
            android:src="@drawable/ic_play" />

        <ImageButton
            android:id="@+id/btnkausar3Shaniaka"
            android:layout_width="47dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:onClick="thirdAyatPlayShaniaka"
            android:src="@drawable/ic_play" />

        <ImageButton
            android:id="@+id/btnkausar3Ina"
            android:layout_width="47dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:onClick="thirdAyatPlayIna"
            android:src="@drawable/ic_play" />




    </LinearLayout>

</LinearLayout>